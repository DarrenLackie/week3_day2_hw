<html>
    <head>
    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}"/>
        <title>{{ title }}</title>
    </head>
    <header>
        <h1>{{ title }}</h1>
    </header>
    <body>
        <ul>
            {% for order in orders %}
            <li>
            <b>{{ order.name }}</b>: {{ order.title }} | <i>{{order.date}}</i> | {{ order.quantity}} | <b>{{order.delivery_method}}</b> |
            {% if order.name == "Darren" %}
            <a href="http://127.0.0.1:4999/orders/0">Order Details</a>
            {% elif order.name == "Meaghan" %}
            <a href="http://127.0.0.1:4999/orders/1">Order Details</a>
            {% elif order.name == "Scott" %}
            <a href="http://127.0.0.1:4999/orders/2">Order Details</a>
            {% endif %}
            </li>
            {% endfor %}
        </ul>
    </body>
</html>